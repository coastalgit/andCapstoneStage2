<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:ignore="MergeRootFrame">

    <android.support.v7.widget.CardView
        android:id="@+id/layout_card_mainverb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardCornerRadius="6dp"
        android:animateLayoutChanges="true"
        android:background="@color/colorGlobalBG"
        card_view:cardElevation="@dimen/card_elevation">

        <LinearLayout
            android:id="@+id/layout_card_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:orientation="horizontal"
            tools:ignore="KeyboardInaccessibleWidget">

            <TextView
                android:id="@+id/tv_mainverb_pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:textColor="@color/colorVerbItem_pt"
                android:textSize="@dimen/text_size_card"
                android:layout_weight="1"
                android:gravity="center"
                android:text="PT"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_mainverb_en"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:textColor="@color/colorVerbItem_en"
                android:textSize="@dimen/text_size_card"
                android:layout_weight="1"
                android:gravity="center"
                android:text="EN"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
