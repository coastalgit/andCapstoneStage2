<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_quizcard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="6dp"
    android:animateLayoutChanges="true"
    android:background="@color/colorWhite"
    card_view:cardElevation="@dimen/card_elevation"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:id="@+id/layout_vert_quizgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_quiz_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:textSize="@dimen/text_size_title"
                    android:gravity="center"
                    android:textColor="@color/colorDGray"
                    android:text="Parabens!" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:orientation="vertical">

<!--
                android:layout_gravity="center_vertical"
                android:scaleType="center"
                android:layout_weight="1"
                android:src="@drawable/outline_play_circle_filled_white_24"/>
-->

                <TextView
                    android:id="@+id/tv_quiz_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:textSize="@dimen/text_size_mid"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:text="You scored..." />


                <Button
                    android:id="@+id/btn_quiz_return"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_rounded_inverted"
                    android:padding="15dp"
                    android:text="Done"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

        </LinearLayout>


</android.support.v7.widget.CardView>
